<Window x:Class="CirclesApp.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CirclesApp"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="170" Width="168" Background="#FFDAE6FC">
    <Grid Background="#FFDAE6FC" Margin="10">
        <Label  Height="40" Width="134" Margin="0,5,0,69" HorizontalAlignment="Center" FontSize="20" Foreground="#4B4C4E" FontWeight="DemiBold"  Content="Вы уверены?"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Width="40" Height="40" Margin="5" Click="YesButton_Click" Foreground="White" Padding="10" BorderBrush="{x:Null}" >
                <Button.Background>
                    <ImageBrush ImageSource="kghjghjf.png"/>
                </Button.Background>
            </Button>
            <Button Width="40" Height="40"  Margin="5" Click="NoButton_Click" Foreground="White" Padding="10" BorderBrush="{x:Null}" >
                <Button.Background>
                    <ImageBrush ImageSource="gdfgdf.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>

